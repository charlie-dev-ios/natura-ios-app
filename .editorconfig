root = true

[*.swift]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2
insert_final_newline = true

[*.{pbxproj,xcconfig}]
indent_style = tab
insert_final_newline = true

[Makefile]
indent_style = tab